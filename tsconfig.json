{
  "compilerOptions": {
    "sourceMap": true,
    "module": "ES6",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}

